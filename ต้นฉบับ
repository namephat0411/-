def get_paper_dimensions_pt():
    size = var_paper_size.get();
    ori = var_orientation.get()
    if size == "A4":
        w, h = 595.27, 841.89
    elif size == "A3":
        w, h = 841.89, 1190.55
    elif size == "A5":
        w, h = 419.53, 595.27
    elif size == "Letter":
        w, h = 612.0, 792.0
    elif size == "Legal":
        w, h = 612.0, 1008.0
    elif size == "Custom":
        try:
            cw = float(var_custom_w.get());
            ch = float(var_custom_h.get());
            unit = var_custom_unit.get()
            if unit == "cm":
                w, h = cw * 28.3464567, ch * 28.3464567
            elif unit == "mm":
                w, h = cw * 2.83464567, ch * 2.83464567
            elif unit == "inch":
                w, h = cw * 72.0, ch * 72.0
            else:
                w, h = cw, ch
        except:
            w, h = 595.27, 841.89
    else:
        w, h = 595.27, 841.89
    return (max(w, h), min(w, h)) if ori == "Landscape" else (min(w, h), max(w, h))


