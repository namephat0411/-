def select_bg_image():
    global bg_image_path
    file_path = filedialog.askopenfilename(filetypes=[("Image Files", "*.png;*.jpg;*.jpeg")])
    if file_path:
        bg_image_path = file_path
        lbl_bg_path.config(text=os.path.basename(file_path), fg="black")
        draw_preview_canvas()


def clear_bg_image():
    global bg_image_path
    bg_image_path = None
    lbl_bg_path.config(text="‡πÑ‡∏°‡πà‡∏°‡∏µ (None)", fg="gray")
    draw_preview_canvas()


Button(bg_frame, text="‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏†‡∏≤‡∏û...", command=select_bg_image).pack(side=LEFT)
Button(bg_frame, text="‡∏•‡∏ö", command=clear_bg_image).pack(side=LEFT, padx=2)


def browse_file(entry_widget, default_name_prefix):
    f = filedialog.asksaveasfilename(initialfile=default_name_prefix, defaultextension=".pdf",
                                     filetypes=[("PDF", "*.pdf")])
    if f:
        entry_widget.delete(0, END)
        entry_widget.insert(0, f)


